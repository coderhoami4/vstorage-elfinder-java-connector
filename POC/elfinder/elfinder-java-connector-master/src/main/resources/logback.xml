 <configuration>
	<property name="DEV_HOME" value="D:/dev-env/logs" />
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0}.%M - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
	<file>${DEV_HOME}/vstorage.test.log</file>
	<append>true</append>
	<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
		<level>debug</level>
	</filter>
	<encoder>
		<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0}.%M - %msg%n
		</pattern>
	</encoder>
	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		<!-- rollover daily -->
		<fileNamePattern>${DEV_HOME}/archived/debug.%d{yyyy-MM-dd}.%i.test.log
		</fileNamePattern>
		<timeBasedFileNamingAndTriggeringPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
			<maxFileSize>10MB</maxFileSize>
		</timeBasedFileNamingAndTriggeringPolicy>
	</rollingPolicy>
</appender>

	<logger name="br.com.trustsystems.elfinder.web.controller.ConnectorController" level="DEBUG">
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="br.com.trustsystems.elfinder.core.impl.googledriver.GoogleDriveVolume" level="DEBUG">
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="org.springframework" level="ERROR" />

	<root level="ERROR">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>

</configuration>
